{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "target": "ES6",
      "skipLibCheck": true,
      "strict": false,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "incremental": true,
      "plugins": [
        {
          "name": "next"
        }
      ],
      "paths": {
        "@/*": ["./src/*"]
      }
  
    },
    "include": [
      "next-env.d.ts",
      "**/*.js",
      "**/*.jsx",
      ".next/types/**/*.js",
      "**/app/*.jsx",
      "**/app/**/*.jsx"
    ],
    "exclude": ["node_modules"]
  }